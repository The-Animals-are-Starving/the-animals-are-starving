<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="706dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/greeting_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/paw_font"
            android:gravity="center"
            android:padding="15sp"
            android:text="Hello, [name]!"
            android:textAlignment="center"
            android:textColor="@color/dark_pink"
            android:textSize="40sp"
            android:textStyle="bold"
            android:letterSpacing="0.05" />

        <Button
            android:id="@+id/create_household_button"
            android:layout_width="298dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginTop="40sp"
            android:backgroundTint="@color/dark_green"
            android:fontFamily="sans-serif-medium"
            android:padding="15dp"
            android:text="Create Household"
            android:textAlignment="center"
            android:textSize="25sp"
            android:layout_margin="10sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginLeft="20sp"
            android:layout_marginRight="20sp"
            android:paddingTop="4sp"
            android:textColor="@color/base_pink"
            android:text="@string/limbo_instructions_text" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70sp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:padding="15sp"
            android:text="You are currently logged in as: [email]"
            android:textColor="@color/base_pink" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
