<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/create_household_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="-30sp"
        android:text="Create Household"
        android:textAlignment="center"
        android:textAppearance="@style/TitleTextStyle"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/household_name_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30sp"
            android:text="Please name your household"
            android:textAlignment="center"
            android:textAppearance="@style/SubtitleTextStyle" />

        <EditText
            android:id="@+id/user_input_household_name"
            android:layout_width="278dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50sp"
            android:layout_marginRight="50sp"
            android:autofillHints="Enter a name for your household"
            android:hint="Household Name"
            android:inputType="text"
            android:padding="20dp"
            android:textSize="15sp" />

        <Button
            android:id="@+id/create_button"
            android:layout_width="189dp"
            android:layout_height="66dp"
            android:layout_gravity="center"
            android:layout_margin="40sp"
            android:backgroundTint="@color/base_green"
            android:fontFamily="sans-serif-medium"
            android:text="Create"
            android:textSize="19sp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>