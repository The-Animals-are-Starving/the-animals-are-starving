<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FeedingActivity">

    <ScrollView
        android:id="@+id/petLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Wrap both LinearLayout and Button inside a FrameLayout or RelativeLayout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/petContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="73dp"
                    android:layout_gravity="center_horizontal"
                    android:text="Feed Da Dawgs!"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:id="@+id/title"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/paw_font"
                    android:textAlignment="center"
                    android:textColor="@color/subtitle_color"
                    android:letterSpacing="0.15"
                    android:lineSpacingExtra="-30sp" />

                <!-- Add more dynamic content here in the LinearLayout -->

            </LinearLayout>

<!--            <Button-->
<!--                android:id="@+id/undo_button"-->
<!--                android:layout_width="105dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="bottom|center_horizontal"-->
<!--                android:backgroundTint="@color/base_pink"-->
<!--                android:text="Undo"-->
<!--                />-->

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
