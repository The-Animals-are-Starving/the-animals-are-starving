<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FeedingActivity">

    <ScrollView
        android:id="@+id/petLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/petContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/paw_font"
                android:letterSpacing="0.15"
                android:lineSpacingExtra="-30sp"
                android:text="@string/feed_da_dawgs"
                android:textAlignment="center"
                android:textColor="@color/subtitle_color"
                android:textSize="30sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <!--only for restricted users-->
            <TextView
                android:id="@+id/title_restricted"
                android:layout_width="wrap_content"
                android:layout_height="73dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/feeding_page"
                android:textAlignment="center"
                android:textSize="55sp"
                android:textStyle="bold"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
